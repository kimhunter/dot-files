[init]
	defaultBranch = main
[rebase]
	autosquash = true
	autostash = true
[alias]
	ci = commit
	st = status
	co = checkout
	ss = stash save
	sp = stash pop
	rbc = rebase --continue
	cp = cherry-pick
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --date=relative
	lgp = log -p --pretty=format:'%Cred%h%Creset - %Cblue(%an)%Creset%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	rollback = reset --soft HEAD^
    ignored =!git ls-files -v | grep "^[[:lower:]]" | sed 's/^[a-z]/assume-unchanged -> /'
	diffc = diff --staged
    smp = smart-pull
	unwatch = update-index --assume-unchanged
	watch = update-index --no-assume-unchanged
	ai = add -i
	ap = add -p

[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = ~/.gitignore
	pager = less -x4
	editor = vim
[mergetool]
	keepBackup = true
[push]
	default = simple	
[status]
	showUntrackedFiles = all
[credential]
	helper = osxkeychain
[merge]
	tool = opendiff
[github]
	user = kimhunter
[pull]
	rebase = true
[include]
	path = ~/Library/Mobile Documents/com~apple~CloudDocs/.gitconfig
